<div class="group_div">
  <ul style='list-style-type: none'>
  <%= link_to group.name, group, id: "group_button" %>
  <% if current_user.admin? || current_user.moderator? %>
   <%= link_to raw("<span class='close hairline'>"), group, method: :delete, data: { confirm: "Are you sure you want to delete this group? All topics and posts within this group will also be deleted." } %>
  <% end %>
  </ul>
</div>
