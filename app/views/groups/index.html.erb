<h1>My Groups</h1>



<%= form_tag groups_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query], class: 'form-control' %>
    <%= submit_tag "Search", class: 'form-control', name: :nil %>
  </p>
<% end %>

<%= will_paginate @groups %>

<ul class="groups">
  <%= render @groups %>
</ul>

<%= will_paginate @groups %>

<% if @groups.empty? %>
  <h2>You have no groups. <%= link_to "Find some groups to get started!", search_groups_path %></h2>
<% else %>
  <h2><%= link_to "Find more groups", search_groups_path %></h2>
<% end %>
