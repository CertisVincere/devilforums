<%= simple_form_for @post, remote: true, url: group_topic_posts_path do |f|   %>
  <%= f.hidden_field :group_id, value: @group.id %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <%= f.input :name %>
  <%= f.input :content %>
  <%= f.input :attachment, as: :file %>
  <%= f.button :submit %>
<% end %>
