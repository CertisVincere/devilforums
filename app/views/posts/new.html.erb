<h1>Post in Topic <%= @topic.name %><h1>

<%= simple_form_for @post, defaults: { input_html: { class: 'form-control' }, label_html: { class: 'label'} }, url: group_topic_posts_path do |form| %>
  <%= form.hidden_field :group_id, value: @group.id %>
  <%= form.hidden_field :topic_id, value: @topic.id %>
  <%= form.input :name %>
  <%= form.input :content %>
  <%= form.input :attachment, as: :file %>
  <%= form.button :submit, class: "btn btn-primary create-button" %>
<% end %>
